{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "baseUrl": "./src/",
    "declaration": true,
    "declarationDir": "./lib",
    "paths": {},
    "outDir": "./lib",
    "plugins": []
  },
  "exclude": ["**/*.test.ts"]
}
